generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model change_users {
  id             String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  id_user        String   @db.Uuid
  field_modified String
  old_value      String
  new_value      String
  change_date    DateTime @default(now()) @db.Timestamp(6)
  users          users    @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model delete_users {
  id            String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email         String
  username      String
  password      String
  name          String
  register_date DateTime @db.Timestamp(6)
  avatar_path   String?
}

model users {
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email         String         @unique
  username      String         @unique
  password      String
  name          String
  register_date DateTime       @default(now()) @db.Timestamp(6)
  save_pokemon  Int[]
  avatar_path   String?        @default("user.webp")
  last_visit    DateTime       @default(now()) @db.Timestamptz(6)
  admin         Boolean        @default(false)
  change_users  change_users[]
}
