generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model change_users {
  id             String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  id_user        String   @db.Uuid
  field_modified String   @db.VarChar(50)
  old_value      String   @db.VarChar(255)
  new_value      String   @db.VarChar(255)
  change_date    DateTime @default(now()) @db.Timestamp(6)
  users          users    @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model delete_users {
  id            String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email         String   @db.VarChar(255)
  username      String   @db.VarChar(50)
  password      String   @db.VarChar(255)
  name          String   @db.VarChar(100)
  register_date DateTime @db.Timestamp(6)
  avatar_path   String?  @db.VarChar(255)
}

model users {
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email         String         @unique @db.VarChar(255)
  username      String         @unique @db.VarChar(50)
  password      String         @db.VarChar(255)
  name          String         @db.VarChar(100)
  register_date DateTime       @default(now()) @db.Timestamp(6)
  avatar_path   String?        @db.VarChar(255)
  change_users  change_users[]
}
